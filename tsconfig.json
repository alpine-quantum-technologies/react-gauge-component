{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "rootDir": "src",
    "sourceMap": false,
    "noEmit": false
  },
  "include": ["src/lib/**/*"]
}